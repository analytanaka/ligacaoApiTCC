const db = require('../database/connection'); 

module.exports = {
    async listarReceitas(request, response) {
        try {  
            const sql = `SELECT rec_id,
             rec_descricao,
             rec_data_receber, 
             rec_valor,
             rec_classi, 
             usu_id 
            FROM receitas;`;
            const receitas = await db.query(sql);

            return response.status(200).json({
                sucesso: true, 
                mensagem: 'Lista de receitas.', 
                dados: receitas[0]
            });

        } catch (error) {
            return response.status(500).json({
                sucesso: false,
                mensagem: 'Erro na requisição.',
                dados: error.message
            });
        }
    }, 
    async cadastrarReceitas(request, response) {
        try {          
            
            const {usu_login, usu_senha, usu_nome, usu_email, usu_fone, usu_fotoperfil} = request.body;
            const sql = `insert into receitas ( rec_id, rec_descricao, rec_data_receber, rec_valor, rec_classi, udu_id ;)
                         values (?, ?, ?, ?,?,?)`
            const values =  [ rec_id, rec_descricao, rec_data_receber, rec_valor, rec_classi, udu_id ];
            const execSql = await db.query(sql , values);
            const rec_id = execSql[0].insertId;

            return response.status(200).json({
                sucesso: true, 
                mensagem: 'Cadastro de receita.', 
                dados: rec_id
            });
        } catch (error) {
            return response.status(500).json({
                sucesso: false,
                mensagem: 'Erro na requisição.',
                dados: error.message
            });
        }
    }, 
    async editarReceitas(request, response) {
        try {            
            return response.status(200).json({
                sucesso: true, 
                mensagem: 'Editar receita.', 
                dados: null
            });
        } catch (error) {
            return response.status(500).json({
                sucesso: false,
                mensagem: 'Erro na requisição.',
                dados: error.message
            });
        }
    }, 
    async apagarReceitas(request, response) {
        try {            
            return response.status(200).json({
                sucesso: true, 
                mensagem: 'Apagar receita.', 
                dados: null
            });
        } catch (error) {
            return response.status(500).json({
                sucesso: false,
                mensagem: 'Erro na requisição.',
                dados: error.message
            });
        }
    }, 
};  
